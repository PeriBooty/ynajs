{
    "plugins": [
        "node"
    ],
    "extends": ["eslint:recommended", "plugin:node/recommended"],
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 7
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "warn"
    }
}
