{
    "plugins": [
        "node",
        "unicorn"
    ],
    "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:unicorn/recommended"],
    "env": {
        "es6": true,
        "node": true,
        "jasmine": true
    },
    "parserOptions": {
        "sourceType": "script",
        "ecmaVersion": 7
    },
    "rules": {
        "indent": ["warn", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "warn",

        "unicorn/filename-case": ["warn", {
            "case": "camelCase"
        }]
    }
}
